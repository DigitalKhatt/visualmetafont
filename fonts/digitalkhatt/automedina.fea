lookup tatweels {

  feature rclt;

  lookupflag UseMarkFilteringSet [@dotmarks];

  lookup tatweels.left.1 {
    sub behshape.medi by behshape.medi.expa add 1 0;
    sub noon.isol.expa add 1 0;
  } tatweels.left.1;

  lookup tatweels.right.1 {
    sub behshape.medi add 0 1;
  } tatweels.right.1;

  lookup tatweels.left.2 {
    sub behshape.medi by behshape.medi.expa add 2 0;
    sub noon.isol.expa add 2 0;
  } tatweels.left.2;

  lookup tatweels.right.2 {
    sub behshape.medi add 0 2;
  } tatweels.right.2;

  lookup tatweels.left.3 {
    sub behshape.medi by behshape.medi.expa add 3 0;
    sub noon.isol.expa add 3 0;
  } tatweels.left.3;

  lookup tatweels.right.3 {
    sub behshape.medi add 0 3;
  } tatweels.right.3;

  lookup tatweels.left.4 {
    sub behshape.medi by behshape.medi.expa add 4 0;
    sub noon.isol.expa add 4 0;
  } tatweels.left.4;

  lookup tatweels.right.4 {
    sub behshape.medi add 0 4;
  } tatweels.right.4;

  lookup tatweels.left.5 {
    sub behshape.medi by behshape.medi.expa add 5 0;
    sub noon.isol.expa add 5 0;
  } tatweels.left.5;

  lookup tatweels.right.5 {
    sub behshape.medi add 0 5;
  } tatweels.right.5;

  lookup tatweels.left.6 {
    sub behshape.medi by behshape.medi.expa add 6 0;
    sub noon.isol.expa add 6 0;
  } tatweels.left.6;

  lookup tatweels.right.6 {
    sub behshape.medi add 0 6;
  } tatweels.right.6;  

  lookup tatweels.liga {
    lookupflag IgnoreMarks;
    sub tatweel behshape.medi by  behshape.medi;
    sub tatweel tatweel behshape.medi by  behshape.medi;
    sub tatweel tatweel tatweel behshape.medi by  behshape.medi;
    sub tatweel tatweel tatweel tatweel behshape.medi by  behshape.medi;
    sub tatweel tatweel tatweel tatweel tatweel behshape.medi by  behshape.medi;
    sub tatweel tatweel tatweel tatweel tatweel tatweel behshape.medi by  behshape.medi;
    sub behshape.init tatweel.fina by noon.isol.expa;
    sub behshape.init tatweel tatweel.fina by noon.isol.expa;
    sub behshape.init tatweel tatweel tatweel.fina by noon.isol.expa;
    sub behshape.init tatweel tatweel tatweel tatweel.fina by noon.isol.expa;
    sub behshape.init tatweel tatweel tatweel tatweel tatweel.fina by noon.isol.expa;
    sub behshape.init tatweel tatweel tatweel tatweel tatweel tatweel.fina by noon.isol.expa;
    sub behshape.init tatweel tatweel tatweel tatweel tatweel tatweel tatweel.fina by noon.isol.expa;
  } tatweels.liga;

  sub behshape.medi'lookup tatweels.left.1	@dotmarks' tatweel'lookup tatweels.liga lookup tatweels.right.1 behshape.medi;
  sub behshape.medi'lookup tatweels.left.2	@dotmarks' tatweel'lookup tatweels.liga lookup tatweels.right.2 tatweel' behshape.medi;
  sub behshape.medi'lookup tatweels.left.3	@dotmarks' tatweel'lookup tatweels.liga lookup tatweels.right.3 tatweel' tatweel' behshape.medi;
  sub behshape.medi'lookup tatweels.left.4	@dotmarks' tatweel'lookup tatweels.liga lookup tatweels.right.4 tatweel' tatweel' tatweel' behshape.medi;
  sub behshape.medi'lookup tatweels.left.5	@dotmarks' tatweel'lookup tatweels.liga lookup tatweels.right.5 tatweel' tatweel' tatweel' tatweel' behshape.medi;
  sub behshape.medi'lookup tatweels.left.6	@dotmarks' tatweel'lookup tatweels.liga lookup tatweels.right.6 tatweel' tatweel' tatweel' tatweel' tatweel' behshape.medi;
  
  sub behshape.init'lookup tatweels.liga @dotmarks' tatweel.fina';
  sub behshape.init'lookup tatweels.liga lookup tatweels.left.1 @dotmarks' tatweel' tatweel.fina';
  sub behshape.init'lookup tatweels.liga lookup tatweels.left.2 @dotmarks' tatweel' tatweel' tatweel.fina';
  sub behshape.init'lookup tatweels.liga lookup tatweels.left.3 @dotmarks' tatweel' tatweel' tatweel' tatweel.fina';
  sub behshape.init'lookup tatweels.liga lookup tatweels.left.4 @dotmarks' tatweel' tatweel' tatweel' tatweel' tatweel.fina';
  sub behshape.init'lookup tatweels.liga lookup tatweels.left.5 @dotmarks' tatweel' tatweel' tatweel' tatweel' tatweel' tatweel.fina';
  sub behshape.init'lookup tatweels.liga lookup tatweels.left.6 @dotmarks' tatweel' tatweel' tatweel' tatweel' tatweel' tatweel' tatweel.fina';


} tatweels;

